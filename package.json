{
  "name": "jarvis-assistant",
  "version": "1.0.0",
  "private": true,
  "main": "dist/electron/main.js",
  "engines": {
    "node": ">=18.17.0"
  },
  "type": "module",

  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev --turbo",
    "dev:electron": "wait-on http://localhost:3000 && rimraf dist && tsc -p tsconfig.electron.json --noEmitOnError false --pretty && if exist dist\\electron\\main.js (electron dist/electron/main.js) else (echo Compilation failed, check tsc output && exit /b 1)",
    "build": "next build && next export && tsc -p tsconfig.electron.json",
    "start": "electron dist/electron/main.js",
    "rebuild": "electron-rebuild -v 32.3.3 -f"
  },
  "dependencies": {
    "@cerebras/cerebras_cloud_sdk": "1.29.0",
    "@picovoice/porcupine-web": "^3.0.3",
    "@supabase/auth-helpers-nextjs": "0.10.0",
    "@supabase/auth-helpers-react": "0.5.0",
    "@supabase/supabase-js": "2.45.4",
    "axios": "1.7.7",
    "electron": "^32.3.3",
    "electron-builder": "24.13.3",
    "electron-is-dev": "3.0.1",
    "gsap": "^3.13.0",
    "next": "^14.2.15",
    "openai": "4.67.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "robotjs": "0.6.0",
    "tailwindcss": "3.4.14",
    "tesseract.js": "4.1.0",
    "wait-on": "8.0.1"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "22.15.19",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "10.4.20",
    "concurrently": "9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "del-cli": "5.1.0",
    "electron-rebuild": "3.2.9",
    "nodemon": "3.1.7",
    "postcss": "8.4.47",
    "postcss-loader": "^8.1.1",
    "rimraf": "5.0.7",
    "style-loader": "^4.0.0",
    "typescript": "5.6.3"
  },
  "build": {
    "appId": "com.jarvis.assistant",
    "files": [
      "electron/**/*",
      "out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "asarUnpack": [
      "node_modules/robotjs/**/*"
    ],
    "win": {
      "icon": "assets/icon.ico"
    },
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}